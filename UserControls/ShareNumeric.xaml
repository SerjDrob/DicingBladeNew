<UserControl x:Class="DicingBlade.UserControls.ShareNumeric"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DicingBlade.UserControls"
             mc:Ignorable="d" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             >


    <hc:ElementGroup Orientation="Horizontal">
        <hc:ElementGroup.Resources>
            <Style TargetType="TextBlock" 
                   BasedOn="{StaticResource TextBlockDefault}">
                <Setter Property="MinWidth" Value="50"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
            </Style>
            <Style TargetType="Button" BasedOn="{StaticResource ButtonDefault.Small}"/>
        </hc:ElementGroup.Resources>
        <TextBlock Text="{Binding Share}"/>
        <hc:ElementGroup>
            <Button hc:IconElement.Geometry="{StaticResource UpGeometry}"/>
            <Button hc:IconElement.Geometry="{StaticResource DownGeometry}"/>
        </hc:ElementGroup>
        <TextBlock Text="{Binding TotalShare}"/>
    </hc:ElementGroup>    
</UserControl>
